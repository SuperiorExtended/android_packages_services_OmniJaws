<resources>
    <style name="Weather" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/widget_text_color</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.DeviceDefault.Settings" />

    <style name="Theme.Activity" parent="@android:style/Theme.Material.NoActionBar" >
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="ActionPrimaryButton" parent="android:Widget.DeviceDefault.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WeatherBaseText" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ForecastWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/forecast_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DetailedWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
