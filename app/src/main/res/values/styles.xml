<resources>
    <style name="Weather" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WeatherSmall" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="WeatherLarge" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.DeviceDefault.Settings" >
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Activity" parent="@android:style/Theme.DeviceDefault.NoActionBar" >
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.Widget" parent="@android:style/Theme.DeviceDefault.DayNight">
    </style>

    <style name="ActionPrimaryButton" parent="android:Widget.DeviceDefault.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WeatherBaseText" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ForecastWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/forecast_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ForecastWeatherTextSmall" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/forecast_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DetailedWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
